{% extends 'base.html.twig' %}

{% block title %}{{ product.label }}{% endblock %}
{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <div class="container">
        <div class="row mt-3 mb-4">
            <div class="col-md-4">
                <img src="" alt="{{ product.Label}}" class="img-fluid">
            </div>
            <div class="col-md-8">
                <h1 class="mt-4 mt-md-0">{{ product.Label}}</h1>
                <h2>{{ product.price }} DT</h2>
                <hr>
                <b>quantity: </b>{{ product.Quantity}}
                <form class="mt-4 p-4 bg-light" method="post">
                    <div class="form-group">
                        <label for="quantity">Quantity</label>
                        <input type="number" class="form-control" id="quantity">
                    </div>
                    <button class="btn btn-warning">Add to Cart</button>
                </form>
            </div>
        </div>
    </div>
{# {% endblock %} #}

<div class="example-wrapper">

{% for key, product in products %}
   {% if key < 5 %}
   <div class="card border-info mb-3" style="max-width: 20rem;">
        <h5 class="card-header">product:</h5>
        <div class="card-body">
          <h3 class="card-title">{{ product.Label}}</h3>
        {# <h5 class="card-title"> Category {{ product.category}}</h5> #}
 </div>
    <div class="card-body">
    <p class="card-text">Price: {{ product.Price}}  dt</p>
  </div>
    <ul class="list-group list-group-flush">
    <li class="list-group-item">quantity : {{ product.Quantity}}</li>
  </ul>
    <div class="card-footer text-muted">

    </div>
</div>
{% endif %}
{% endfor %}

</div>
{% endblock %}
